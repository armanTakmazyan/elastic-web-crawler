{
    "name": "elastic-web-crawler",
    "version": "1.0.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "author": "Arman Takmazyan",
    "license": "MIT",
    "description": "A web crawler library for the Elasticsearch Crawler API",
    "sideEffects": false,
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "prepare": "npm run build",
        "copy": "npx copyfiles ./package.json dist/ && npx copyfiles README.md dist/ ",
        "lint": "tslint -c tslint.json src/**/*.ts",
        "format": "prettier --write src/**/*.ts",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "dependencies": {
        "axios": "^1.2.3"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "copyfiles": "^2.4.1",
        "prettier": "^2.8.3",
        "tslint": "^6.1.3",
        "typescript": "^4.9.4"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/armanTakmazyan/elastic-web-crawler"
    },
    "bugs": {
        "url": "https://github.com/armanTakmazyan/elastic-web-crawler/issues"
      },
    "homepage": "https://github.com/armanTakmazyan/elastic-web-crawler#readme",
    "keywords": [
        "elastic",
        "elasticsearcch",
        "elastic-search",
        "elastic-app-search",
        "elastic-web-crawler",
        "crawler"
    ]
}
